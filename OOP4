#include <iostream>
using namespace std;
int sum(int a,int b,int c=0)
{
    return (a+b+c);
}
int product(int a,int b,int c=1)
{
    return (a*b*c);
}
int main()
{
    int a, b;
    cout<<"enter two values:";
    cin>>a>>b;
    cout<<"sum of "<<a<<" "<<b<<" :"<<sum(a,b)<<endl;
    int c;
    cout<<"enter a value:";
    cin>>c;
    cout<<"Product of "<<a<<" "<<b<<" "<<c<<" :"<<product(a,b,c)<<endl;
}
